@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Shapes Validator</h1>
</div>
<h4>Add a line</h4>
<form asp-page="Index" method="post" asp-page-handler="Line" class="form-inline">
    <div class="d-flex flex-row">
        <div class="d-flex flex-column">
            <input required="required" step="0.01" type="number" id="x1" name="x1" placeholder="x1"/>
            <input required="required" step="0.01" type="number" id="y1" name="y1" placeholder="y1"/>
        </div>
        <div class="d-flex flex-column">
            <input required="required" step="0.01" type="number" id="x2" name="x2" placeholder="x2"/>
            <input required="required" step="0.01" type="number" id="y2" name="y2" placeholder="y2"/>
        </div>
    </div>
    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add</button>
</form>
<h4>Add a circle</h4>
<form asp-page="Index" method="post" class="form-inline">
    <input type="text" id="Description" name="Description" class="form-control" placeholder="Description"/>
    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Add</button>
</form>
<div asp-validation-summary="All"></div>
<h4>Current Todo's</h4>

@if (!Model.Shapes.Any())
{
    <p class="empty">The list is empty</p>
}
else
{
    <ul>
        @foreach (var shape in Model.Shapes)
        {
            <li>
                <p>@shape.ToString()</p>
            </li>
        }
    </ul>
}

<a class="btn btn-success" asp-page-handler="DownloadSVG">
    Download CSV
</a>